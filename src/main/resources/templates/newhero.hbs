{{> layout.hbs}}
<form>
    <div class="mb-3">
        <label for="name" class="form-label">Hero Name</label>
        <input type="text" class="form-control" id="name" name="name">
    </div>
    <div class="mb-3">
        <label for="age" class="form-label">Age</label>
        <input type="number" class="form-control" id="age" name="age">
    </div>
    <div class="mb-3">
        <label for="power" class="form-label">Super Power</label>
        <input type="text" class="form-control" id="power" name="power">
    </div>
    <div class="mb-3">
        <label for="weakness" class="form-label">Weakness</label>
        <input type="text" class="form-control" id="weakness" name="weakness">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>